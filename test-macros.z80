;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; test-macros
;;
;; macros to facilitate tests
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

.macro TEST_SET_TEXT, s1
    ld HL, (lineBufStart)
    ld (lineBufTop),HL
    ld (currkey),HL
    ld HL, tst_text%%M
    ld (charPtr), HL

    _skip
tst_text%%M:
        db s1,"\r\n",-1,"\r\n"
    _endskip
.endm

.macro expect, expectVal, failTxt
    call dup
    call printNum
    _push expectVal
    call dup
    call printNum
    ; _getTOS H,L
    ; call drop
    _pop HL
    or A
    sbc HL,BC
    call drop
    _compareZero H,L
    jp z, tf_done%%M            ; asm80 macro nesting issue
                                ; prevents using _if macro here
    _push FAILED
    call printPStr
    _push  te_fail%%M
    call printPStr
    halt
    _skip
te_fail%%M:
        .pstr failTxt
    _endskip
tf_done%%M:
    call printCR
.endm

.macro _printDepth
    call depth
    call printNum
    halt
.endm

